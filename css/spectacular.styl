@import "colors"
@import "mixins"
@import "functions"

states = ('errored' errored) ('skipped' skipped) ('pending' pending) ('failure' failure) ('success' success)

@keyframes rotate {
  from {
    transform rotate(0deg)
  }

  to {
    transform rotate(360deg)
  }
}

body
  font-family Roboto, sans
  font-weight 300

#progress
  background light_gray
  display inline-block
  position fixed
  padding 5px
  border-radius 5px

  & > span
    display block
    background dark_blue
    color medium_gray
    padding 5px 8px
    border-radius 3px

    .all
      display block
      font-size 40px
      line-height 40px
      font-weight 100

    .total
      color light_gray

  for state in states
    .{state[0]} .symbol
      color state[1]

    .{state[0]}.not-zero
      color state[1]

  &.fail
    .all .total
      color failure

  &.failure
    .all
    .all .total
      color failure

  &.success
    .all
    .all .total
      color success

    span:not(:first-child):not(.not-zero) .symbol
      color: medium_gray

  .seed
  .time
    float left
    color light_gray
    display inline-block
    border-radius 3px
    line-height 1em
    padding 3px 5px
    margin-top 3px
    text-shadow 0 1px 2px transparentize(dark_blue, 0.5)


    i
      color dark_blue
      font-size 0.9em

  .time
    margin-left 8px
    background success

  .seed
    background light_blue








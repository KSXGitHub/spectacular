
dark_blue_const = #0b1d26

dark_blue(op)
  rgba(22,58,76,op)

success(op)
  rgba(100,180,50,op)

pending(op)
  rgba(255,200,90,op)

error(op)
  rgba(255,150,20,op)

failure(op)
  rgba(255,40,20,op)

skipped(op)
  rgba(255,20,220,op)

blue_gray(op)
  rgba(86,122,120,op)

light_gray(op)
  rgba(207,231,230,op)

light_blue(op)
  rgba(56,147,193,op)

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

animation()
  vendor('animation', arguments)

opacity()
  vendor('opacity', arguments)

transition()
  vendor('transition', arguments)

transform()
  vendor('transform', arguments)

box-sizing()
  vendor('box-sizing', arguments)


border-radius()
  vendor('border-radius', arguments)

box-shadow()
  vendor('box-shadow', arguments)

text-shadow()
  vendor('text-shadow', arguments)

background-linear-gradient(startPoint, startColor, startInterval, endColor, endInterval)
  background-image -webkit-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -moz-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -ms-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image -o-linear-gradient(startPoint, startColor startInterval, endColor endInterval)
  background-image linear-gradient(startPoint, startColor startInterval, endColor endInterval)

@keyframes rotate {
  from {
    transform rotate(0deg)
  }

  to {
    transform rotate(360deg)
  }
}

html
  &.success body
    #reporter
      background success(0.3)
      &:before
        border 1px solid success(0.3)
      & > header h2
        color success(1)

        &:after
          animation none
          content "\f00c"
          color success(1)
          background none

  &.failure body
    #reporter
      background failure(0.3)
      &:before
        border 1px solid failure(0.3)

      & > header h2
        color failure(1)

        &:after
          animation none
          content "\f00d"
          color: failure(1)
          background none


.hide-success
  .example.success, .example-group.success
    display none !important

  #reporter #controls button.success
    background success(0.4)

.hide-pending
  .example.pending
    display none !important

  #reporter #controls button.pending
    background pending(0.4)

.hide-skipped
  .example.skipped
    display none !important

  #reporter #controls button.skipped
    background error(0.4)

.hide-failure
  .example.failure
    display none !important

  #reporter #controls button.failure
    background skipped(0.4)

.hide-errored
  .example.errored
    display none !important

  #reporter #controls button.errored
    background failure(0.4)

.hide-errored.hide-failure.hide-skipped
  .example-group.failure
    display none !important


#reporter
  position relative
  margin 10px
  padding 20px
  font-family 'Roboto', sans-serif
  font-weight 300
  border-radius 4px
  transition background 0.8s ease-in

  *
    box-sizing border-box
    -webkit-font-smoothing antialiased

  &:before
    content ''
    position absolute
    z-index -1
    top 0
    right 0
    left 0
    bottom 0
    display block
    background dark_blue(0.1)
    border 1px solid dark_blue(0.1)
    border-radius 4px

  &:after
    content ''
    position absolute
    z-index -1
    top 2px
    right 2px
    left 2px
    border-radius 3px
    height 100px
    background-linear-gradient top, dark_blue(0.2), 0, dark_blue(0), 100%
  pre
    overflow inherit
    border none
    background none
    box-shadow none

    a
      border none

  #controls
    position absolute
    top 150px
    left 6px
    padding 8px
    background dark_blue_const
    width 68px
    z-index 10
    border-radius 3px
    border 1px solid dark_blue(0.5)
    box-shadow 0px 1px 2px rgba(0,0,0,1)
    transition top 0.5s cubic-bezier(.59,.96,.78,1)

    button
      cursor pointer
      outline 0 !important
      width 100%
      border none
      color white
      text-align center
      text-transform uppercase
      font-weight 500
      font-size 10px
      font-family monospace
      text-shadow 0 1px 2px dark_blue(1)
      border-radius 3px
      padding 2px 0
      margin-top 4px
      transition background 0.5s ease-out

      &.success
        background success(1)

      &.pending
        background pending(1)

      &.errored
        background error(1)

      &.skipped
        background skipped(1)

      &.failure
        background failure(1)


  #examples
    position relative
    background #efefef
    padding-left 80px
    min-height 400px
    border 1px solid dark_blue(0.2)

    &:before
    &:after
      content ''
      height 100%
      width 80px
      left 0
      top 0
      display block
      position absolute
      background rgb(0,0,0)

    &:after
      width 70px
      background dark_blue_const
      border-left 5px solid dark_blue(0.5)
      border-right 5px solid dark_blue(0.5)
      box-shadow inset 0 1px 5px rgba(0,0,0,0.5)

    // .example-group + .example-group
    //   border-top 1px solid dark_blue(0.1)

    .example-group, .example

      &:hover:before
        background rgba(255,255,255,0.1)
        transition all 0.15s ease-in

      &:before
        content ''
        position absolute
        font-weight bold
        display block
        width 68px
        height 100%
        padding 8px 8px
        top 0
        left 4px
        text-align right
        font-size 1.1em
        margin-left: -78px
        color rgba(255,255,255,0.3)
        z-index 1
        border-radius 4px
        box-sizing border-box
        text-shadow 0 0 4px rgba(0,0,0,0.6)
        transition all 0.45s ease-in

      h3
      h4
      h5
        color dark_blue(1)
        margin 0
        font-weight 300
      h5
        font-size 16px

      h4
        margin-bottom 4px
        font-size 16px

      h3
        margin-bottom 4px
        font-size 18px

    .example-group
      &.success
        background success(0.3)

      &.failure
        background failure(0.2)

      h3
        padding 8px 0

    .example
      cursor pointer
      padding 8px 0

      h4
        display inline-block
      pre
        color dark_blue(1)
        margin 0
        margin-top 6px
        margin-right 8px
        padding 8px
        background #efefef
        border 1px solid #e4e4e4
        overflow hidden

        &+pre
          margin-top 0
          border-top 0

        .hidden
          display: none

        ins
        del
          display inline
          text-decoration none

        ins
          background success(0.2)
          border 1px solid success(0.6)

        del
          background failure(0.2)
          border 1px solid failure(0.6)

      & + .example
        border-top 1px solid dark_blue(0.1)

      &:before
        content '#' attr(data-id)

      &.success:hover:before
        color success(1)

      &.failure:hover:before
        color failure(1)

      &.skipped:hover:before
        color skipped(1)

      &.errored:hover:before
        color error(1)

      &.pending:hover:before
        color pending(1)


      &.animate
        pre
          transition all 0.2s ease-in

      &.success.closed
      &.pending.closed
        pre
          height 0 !important
          padding 0 8px
          border-top 0px solid blue_gray(0.1)
          border-bottom 0px solid blue_gray(0.1)
          margin-top 0


      &.failure
      &.error
      &.skipped
        .expectation.success pre
          display none

      .expectation
        padding-left 24px

        &.success
          h5
            color DarkGreen
        &.failure
          h5
            color DarkRed


      &.success
      &.pending
        pre
          display block


      &.skipped pre + pre
        display none

      &.success
        .line
          background success(0.2)

        background success(0.2)
        // h4
        //   color success(1)
        .result
          background success(1)

      &.failure
        .line
          background failure(0.2)

        background failure(0.2)
        .result
          background failure(1)

      &.skipped
        .line
          background skipped(0.2)

        background skipped(0.2)
        .result
          background skipped(1)

      &.errored
        .line
          background error(0.2)

        background error(0.2)
        .result
          background error(1)

      &.pending
        .line
          background pending(0.2)

        background pending(0.2)
        .result
          background pending(1)

      .expectation + .expectation
        margin-top 4px

      .result
        color white
        text-align center
        text-transform uppercase
        font-weight 500
        display inline-block
        font-size 10px
        font-family monospace
        text-shadow 0 1px 2px dark_blue(1)
        border-radius 3px
        padding 5px 8px 3px
        vertical-align middle

      .time
        position relative
        background dark_blue(1)
        color light_gray(1)
        display inline-block
        border-radius 3px
        font-size 0.8em
        padding 1px 8px 3px 20px
        vertical-align middle

        .icon-time
          position absolute
          color blue_gray(1)
          left 7px
          top 4px

  &.documentation #examples

    .example-group, .example
      position relative

    .example-group
      for num in (0..10)
        &.level{num}
          h3, h4, h5
            padding-left 8px + num * 24px

    .example
      for num in (0..10)
        &.level{num}
          padding-left 8px + num * 24px

          h3, h4, h5
            padding-left 0

  &.progress #examples

    .example
      cursor: pointer
      min-height 58px
      position relative
      padding 8px 8px 8px 80px
      border-bottom 1px solid blue_gray(0.1)

      &.success
        border-left 4px solid success(1)
      &.failure
        border-left 4px solid failure(1)
      &.skipped
        border-left 4px solid skipped(1)
      &.errored
        border-left 4px solid error(1)
      &.pending
        border-left 4px solid pending(1)


      .result
        padding 4px 4px 3px
        position absolute
        left 8px
        top 8px
        width 64px
        height 20px

      .time
        padding 1px 6px 3px 18px
        position absolute
        left 8px
        top 30px
        width 64px
        height 20px

  > header
    color blue_gray(1)

    h1
    h2
      margin 0
      margin-bottom 14px
      font-weight 100
      font-size 2.35em
      display inline-block
      transition color 0.4s ease-in
      text-shadow 0 1px 1px white

    h2
      color light_blue(1)
      font-weight 500
      font-size 1.9em
      position relative

      &:after
        font-family FontAwesome
        box-sizing border-box
        content: '\f110'
        display block
        padding 8px 7px 8px 8px
        padding-top: 7px
        font-size 0.8em
        position absolute
        margin-left -4px
        top 0px
        left 100%
        width 40px
        height 40px
        animation rotate 1s linear 0s infinite

    aside
      padding 1px 8px 11px
      background dark_blue(0.85)
      border-radius 3px
      text-shadow 0 0 1px dark_blue(1)
      box-shadow inset 0 0 5px dark_blue(1)
      margin-bottom 20px

    pre
      white-space pre-wrap
      word-break break-all
      font-family monospace
      margin 0

      a, a:hover
        text-decoration none

    p
      line-height 1.2em
      margin 0
      margin-top 10px
      color light_gray(1)
      font-variant small-caps

    span span
      color white
      font-weight 700
      font-size 14px
      padding 5px 6px 3px 6px
      background dark_blue(0.85)
      border-radius 3px
      text-shadow 0 0 1px dark_blue(1)
      box-shadow inset 0 0 5px dark_blue(1)

    .success
      color success(1)

    .errored
      color error(1)

    .pending, .yellow
      color pending(1)

    .blue
      color light_blue(1)
      margin-left 4px
      font-weight 700
      font-size 14px
      padding 5px 6px 3px 6px
      background dark_blue(0.85)
      border-radius 3px
      text-shadow 0 0 1px dark_blue(1)
      box-shadow inset 0 0 5px dark_blue(1)

      span
        color white
        font-weight normal

    .failure
      color failure(1)

    .skipped
      color skipped(1)



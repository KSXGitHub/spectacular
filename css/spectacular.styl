
dark_blue_const = #0b1d26

dark_blue(op)
  rgba(22,58,76,op)

success(op)
  rgba(100,180,50,op)

pending(op)
  rgba(255,200,90,op)

error(op)
  rgba(255,150,20,op)

failure(op)
  rgba(255,40,20,op)

skipped(op)
  rgba(255,20,220,op)

blue_gray(op)
  rgba(86,122,120,op)

light_gray(op)
  rgba(207,231,230,op)

light_blue(op)
  rgba(56,147,193,op)

transition(trans)
  transition trans
  -webkit-transition trans
  -moz-transition trans
  -o-transition trans

transform(trans)
  transform trans
  -webkit-transform trans
  -moz-transform trans
  -o-transform trans

box-sizing(mode)
  box-sizing mode
  -webkit-box-sizing mode
  -moz-box-sizing mode
  -o-box-sizing mode


border-radius(rad)
  border-radius rad
  -webkit-border-radius rad
  -moz-border-radius rad
  -o-border-radius rad

box-shadow()
  box-shadow arguments
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  -o-box-shadow arguments

text-shadow()
  text-shadow arguments
  -webkit-text-shadow arguments
  -moz-text-shadow arguments
  -o-text-shadow arguments

html
  &.success body
    #reporter
      background success(0.3)
      & > header h2
        color success(1)
  &.failure body
    #reporter
      background failure(0.3)

      & > header h2
        color failure(1)

  &.success body
  &.failure body
    #reporter > header h1
      color light_gray(1)

.hide-success
  .example.success
    display none !important

.hide-pending
  .example.pending
    display none !important

.hide-skipped
  .example.skipped
    display none !important

.hide-failure
  .example.failure
    display none !important

.hide-errored
  .example.errored
    display none !important

#reporter
  position relative
  margin 10px
  padding 10px
  font-family 'Roboto', sans-serif
  font-weight 300
  border-radius 4px
  transition(background 0.8s ease-in)
  box-shadow(0px 6px 10px 2px rgba(0,0,0,0.5))

  *
    box-sizing(border-box)
    -webkit-font-smoothing antialiased

  &:before
    content ''
    position absolute
    z-index -1
    top 0
    right 0
    left 0
    bottom 0
    display block
    background dark_blue(1)
    border-radius 4px

  pre
    overflow inherit
    border none

    a
      border none



  #controls
    position absolute
    top 150px
    left 16px
    padding 8px
    background dark_blue_const
    width 68px
    z-index 10
    border-radius(3px)
    border 1px solid dark_blue(0.5)
    box-shadow(0px 1px 2px rgba(0,0,0,1))
    transition(top 0.5s cubic-bezier(.59,.96,.78,1))

    button
      cursor pointer
      outline 0 !important
      width 100%
      border none
      color white
      text-align center
      text-transform uppercase
      font-weight 500
      font-size 10px
      font-family monospace
      text-shadow(0 1px 2px dark_blue(1))
      border-radius(3px)
      padding 2px 0
      margin-top 4px
      transition(background 0.5s ease-out)

      &.success
        background success(1)
        &.off
          background success(0.4)
      &.pending
        background pending(1)
        &.off
          background pending(0.4)
      &.errored
        background error(1)
        &.off
          background error(0.4)
      &.skipped
        background skipped(1)
        &.off
          background skipped(0.4)
      &.failure
        background failure(1)
        &.off
          background failure(0.4)

  #examples
    position relative
    background #efefef
    padding-left 80px
    min-height 400px

    &:before
    &:after
      content ''
      height 100%
      width 80px
      left 0
      top 0
      display block
      position absolute
      background rgb(0,0,0)

    &:after
      width 70px
      background dark_blue_const
      border-left 5px solid dark_blue(0.5)
      border-right 5px solid dark_blue(0.5)
      box-shadow(0 1px 5px rgba(0,0,0,0.5) inset)

  .example
    cursor: pointer
    min-height 58px
    position relative
    padding 8px 8px 8px 80px
    border-bottom 1px solid blue_gray(0.1)
    counter-increment example

    h4
    h5
      color dark_blue(1)
      margin 0
      font-weight 300
    h4
      margin-bottom 4px
      font-size 16px

    pre
      color dark_blue(1)
      margin 0
      margin-top 6px
      padding 8px
      background #efefef
      border 1px solid #e4e4e4
      overflow hidden
      transition(all 0.25s ease-in)

      &+pre
        margin-top 0
        border-top 0

      ins
      del
        display inline
        text-decoration none

      ins
        background success(0.2)
        border 1px solid success(0.6)

      del
        background failure(0.2)
        border 1px solid failure(0.6)

    &:hover:before
      background rgba(255,255,255,0.1)
      transition(all 0.15s ease-in)

    &:before
      content '#' attr(data-id)
      position absolute
      font-weight bold
      display block
      width 68px
      height 100%
      padding 8px 8px
      top 0
      left 0
      text-align right
      font-size 1.1em
      margin-left: -78px
      color rgba(255,255,255,0.3)
      z-index 1
      border-radius(4px)
      box-sizing(border-box)
      transition(all 0.45s ease-in)

    &.success.closed
    &.pending.closed
      pre
        height 0 !important
        padding 0 8px
        border-top 0px solid blue_gray(0.1)
        border-bottom 0px solid blue_gray(0.1)
        margin-top 0

    &.failure
    &.error
    &.skipped
      .expectation.success pre
        display none

    .expectation
      &.success
        h5
          color success(1)
      &.failure
        h5
            color failure(1)
    &.success
    &.pending
      pre
        display block


    &.skipped pre + pre
      display none

    &.success
      .line
        background success(0.2)

      background success(0.2)
      border-left 4px solid success(1)
      h4
        color success(1)
      .result
        background success(1)
    &.failure
      .line
        background failure(0.2)

      background failure(0.2)
      border-left 4px solid failure(1)
      .result
        background failure(1)
    &.skipped
      .line
        background skipped(0.2)

      background skipped(0.2)
      border-left 4px solid skipped(1)
      .result
        background skipped(1)
    &.errored
      .line
        background error(0.2)

      background error(0.2)
      border-left 4px solid error(1)
      .result
        background error(1)

    &.pending
      .line
        background pending(0.2)

      background pending(0.2)
      border-left 4px solid pending(1)
      .result
        background pending(1)

    .expectation + .expectation
      margin-top 4px

    .result
      position absolute
      left 8px
      top 8px
      padding 4px 0
      width 64px
      height 20px
      color white
      text-align center
      text-transform uppercase
      font-weight 500
      font-size 10px
      font-family monospace
      text-shadow(0 1px 2px dark_blue(1))
      border-radius(3px)

    .time
      padding 2px 6px 2px 18px
      background dark_blue(1)
      color light_gray(1)
      position absolute
      display block
      width 64px
      left 8px
      top 30px
      border-radius(3px)
      font-size 0.8em

      .icon-time
        position absolute
        color blue_gray(1)
        left 4px
        top 4px

  > header
    color blue_gray(1)

    h1
    h2
      margin 0
      font-weight 100
      font-size 2.35em
      display inline-block
      transition(color 0.4s ease-in)

    h2
      color light_blue(1)
      font-weight 100
      font-size 2.35em

    pre
      white-space pre-wrap
      word-break break-all
      font-family monospace
      a

      a
      a:hover
        text-decoration none

    p
      line-height 1.2em

    span span
      font-weight 700
      font-size 14px
      padding 4px 6px
      background rgba(0,0,0,0.3)
      border-radius(2px)

    .success
      color success(1)

    .errored
      color error(1)

    .pending, .yellow
      color pending(1)

    .failure
      color failure(1)

    .skipped
      color skipped(1)

    p
      color light_gray(1)

